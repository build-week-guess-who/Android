<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.signIn">

    <ImageView
        android:id="@+id/signin_imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginVertical="80dp"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginBottom="76dp"
        android:contentDescription="@string/twitter_bird"
        android:src="@drawable/twitter_bird"
        app:layout_constraintBottom_toTopOf="@+id/signin_guideline"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/signin_textView3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signin_guideline" />

    <EditText
        android:id="@+id/signin_editText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/johndoe_gmail_com"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin_textView3" />

    <TextView
        android:id="@+id/signin_textView4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin_editText" />

    <EditText
        android:id="@+id/signin_editText2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:inputType = "textPassword"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin_textView4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/signin_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="144dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/signin_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="404dp" />

    <Button
        android:id="@+id/button_signIn"
        android:layout_width="196dp"
        android:layout_height="37dp"
        android:background="@drawable/button_with_border"
        android:text="@string/sign_up"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin_editText2" />

</androidx.constraintlayout.widget.ConstraintLayout>